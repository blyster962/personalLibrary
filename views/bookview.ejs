<!DOCTYPE html>
<html>
<head>
  <% include headerStuff %>
</head>
<body>
  <div class="container-fluid">
    <% include pageHeader %>

    <div class="row"><div class="col-xs-12">
      <p>ISBN: <%= book ? book.isbn : '' %></p>
      <p>Title: <%= book ? book.title : '' %></p>
      <p>SubTitle: <%= book ? book.subtitle : '' %></p>
      <p>Author: <%= book ? book.author : '' %></p>
      <p>Genre: <%= book ? book.genre : '' %></p>
      <p>Been Read?: <%= book ? book.read : '' %></p>
    </div></div>


      <% if (bookkey) { %>
        <div class="row"><div class="btn-group col-sm-12">
          <a class="btn btn-default" href="/books/destroy?key=<%= bookkey %>" role="button">Delete</a>
          <a class="btn btn-default" href="/books/edit?key=<%= bookkey %>" role="button">Edit</a>
        </div></div>
      <% } %>
    <% include footer %>
  </div>
</body>
</html>
